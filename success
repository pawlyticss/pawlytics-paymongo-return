  <button id="open" style="padding:12px 16px;font-size:16px;">
    Open Pawlytics
  </button>

  <script>
    const params = new URLSearchParams(location.search);
    const ref = params.get("ref") || "";
    const deepLink = `pawlytics://donation/success?ref=${encodeURIComponent(ref)}`;

    // auto open
    window.location.href = deepLink;

    // fallback
    document.getElementById("open").onclick = () => {
      window.location.href = deepLink;
    };
  </script>
